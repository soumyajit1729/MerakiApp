<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffedd1"
    android:layout_height="match_parent"
    tools:context=".first">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="198dp"
        android:layout_height="139dp"
        android:layout_margin="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circlecropped" />

    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/custom_background"
        android:text="Let's Get Started"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="Notice: \n\n
1. We're here to help each other to build a world as a place where people share love and care for each other for better tomorrow.\n\n
2. Please make sure you're helping the right person.\n\n
3. Use a nickname if you want to keep your identity as anonymous.\n\n
4. You have every right to ask for documents of proof or ID.\n\n
5. Do not hesitate to mention your problem. "
        app:layout_constraintBottom_toTopOf="@+id/signup"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>